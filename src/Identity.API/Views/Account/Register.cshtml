@model RegisterViewModel

<div class="register-page">
    <div class="register-container">
        <div class="register-wrapper">
            <form asp-route="Register" class="register-form">
                <input type="hidden" asp-for="ReturnUrl" />
                
                <div class="register-card">
                    <!-- Decorative Elements -->
                    <div class="register-decoration">
                        <div class="decoration-circle decoration-circle-1"></div>
                        <div class="decoration-circle decoration-circle-2"></div>
                        <div class="decoration-circle decoration-circle-3"></div>
                    </div>

                    <!-- Header -->
                    <div class="register-header">
                        <div class="register-icon-wrapper">
                            <svg class="register-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M20.59 22C20.59 18.13 16.74 15 12 15C7.26 15 3.41 18.13 3.41 22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <h1 class="register-title">Create Account</h1>
                        <p class="register-subtitle">Join AdventureWorks and start your shopping journey</p>
                    </div>

                    <partial name="_ValidationSummary" />

                    <!-- Form Fields -->
                    <div class="register-fields">
                        <!-- Email -->
                        <div class="form-group-wrapper">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">
                                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        <path d="L22 6L12 13L2 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                    Email Address
                                </label>
                                <input type="email" class="form-input" id="Email" placeholder="your.email@example.com" asp-for="Email" autofocus>
                                <span asp-validation-for="Email" class="field-error"></span>
                            </div>
                        </div>

                        <!-- Full Name -->
                        <div class="form-group-wrapper">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label">
                                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                    Full Name
                                </label>
                                <input type="text" class="form-input" id="Name" placeholder="John Doe" asp-for="Name">
                                <span asp-validation-for="Name" class="field-error"></span>
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="form-group-wrapper">
                            <div class="form-group">
                                <label asp-for="Password" class="form-label">
                                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        <path d="M7 11V7C7 5.67392 7.52678 4.40215 8.46447 3.46447C9.40215 2.52678 10.6739 2 12 2C13.3261 2 14.5979 2.52678 15.5355 3.46447C16.4732 4.40215 17 5.67392 17 7V11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                    Password
                                </label>
                                <div class="password-input-wrapper">
                                    <input type="password" class="form-input" id="Password" placeholder="••••••••" asp-for="Password" autocomplete="new-password">
                                    <button type="button" class="password-toggle" onclick="togglePassword('Password')" tabindex="-1">
                                        <svg class="eye-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M1 12C1 12 5 4 12 4C19 4 23 12 23 12C23 12 19 20 12 20C5 20 1 12 1 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                            <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="field-error"></span>
                            </div>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group-wrapper">
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        <path d="M7 11V7C7 5.67392 7.52678 4.40215 8.46447 3.46447C9.40215 2.52678 10.6739 2 12 2C13.3261 2 14.5979 2.52678 15.5355 3.46447C16.4732 4.40215 17 5.67392 17 7V11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                    Confirm Password
                                </label>
                                <div class="password-input-wrapper">
                                    <input type="password" class="form-input" id="ConfirmPassword" placeholder="••••••••" asp-for="ConfirmPassword" autocomplete="new-password">
                                    <button type="button" class="password-toggle" onclick="togglePassword('ConfirmPassword')" tabindex="-1">
                                        <svg class="eye-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M1 12C1 12 5 4 12 4C19 4 23 12 23 12C23 12 19 20 12 20C5 20 1 12 1 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                            <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                    </button>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="field-error"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Hidden fields -->
                    <input type="hidden" asp-for="LastName" value="" />
                    <input type="hidden" asp-for="Street" value="" />
                    <input type="hidden" asp-for="City" value="" />
                    <input type="hidden" asp-for="State" value="" />
                    <input type="hidden" asp-for="Country" value="" />
                    <input type="hidden" asp-for="ZipCode" value="" />
                    <input type="hidden" asp-for="CardHolderName" value="" />
                    <input type="hidden" asp-for="CardNumber" value="" />
                    <input type="hidden" asp-for="SecurityNumber" value="" />
                    <input type="hidden" asp-for="Expiration" value="" />
                    <input type="hidden" asp-for="CardType" value="1" />

                    <!-- Action Buttons -->
                    <div class="register-actions">
                        <button type="submit" class="btn-register-primary" name="button" value="register">
                            <span>Create Account</span>
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                        <button type="submit" class="btn-register-secondary" name="button" value="cancel">
                            <span>Cancel</span>
                        </button>
                    </div>

                    <!-- Footer -->
                    <div class="register-footer">
                        <p class="footer-text">
                            Already have an account?
                            <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="footer-link">
                                Sign in here
                            </a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function togglePassword(fieldId) {
        const input = document.getElementById(fieldId);
        const button = input.nextElementSibling;
        const icon = button.querySelector('.eye-icon');
        
        if (input.type === 'password') {
            input.type = 'text';
            icon.innerHTML = '<path d="M17.94 17.94C16.2306 19.243 14.1491 20.4641 12 20.4641C5 20.4641 1 12 1 12C2.24389 9.68192 3.96914 7.65661 6.06 6.06M9.9 4.24C10.5883 4.0789 11.2931 3.99834 12 4C19 4 23 12 23 12C22.393 13.1356 21.6691 14.2047 20.84 15.19M14.12 14.12C13.8454 14.4148 13.5141 14.6512 13.1462 14.8151C12.7782 14.9791 12.3809 15.0673 11.9781 15.0744C11.5753 15.0815 11.1751 15.0074 10.8016 14.8565C10.4281 14.7056 10.0887 14.481 9.80385 14.1962C9.51903 13.9113 9.29438 13.5719 9.14351 13.1984C8.99264 12.8249 8.91853 12.4247 8.92563 12.0219C8.93274 11.6191 9.02091 11.2218 9.18488 10.8538C9.34884 10.4859 9.58525 10.1546 9.88 9.88" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><line x1="1" y1="1" x2="23" y2="23" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>';
        } else {
            input.type = 'password';
            icon.innerHTML = '<path d="M1 12C1 12 5 4 12 4C19 4 23 12 23 12C23 12 19 20 12 20C5 20 1 12 1 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>';
        }
    }
</script>



